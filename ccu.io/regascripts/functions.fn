!# funktions.fn 1.1 CCU.IO
!#
!# Dieses Script gibt eine Liste der Gewerken als JSON Objekt aus
!#
!# 6'2013-7'2013 bluefox, hobbyquaker
!#

object  oFunction;
string  sFunctionId;
string  sChannelId;
boolean bFirst       = true;
boolean bFirstSecond = true;

Write("{");
foreach (sFunctionId, dom.GetObject(ID_FUNCTIONS).EnumUsedIDs())
{
    if (bFirst == false) {
      WriteLine(',');
    } else {
      bFirst = false;
    }
    oFunction = dom.GetObject(sFunctionId);
	Write('"' # sFunctionId # '": ');
    Write('{"Name": "');
    WriteURL(oFunction.Name());
    Write('","TypeName":"' # oFunction.TypeName());
    Write('", "EnumInfo": "');
    WriteURL(oFunction.EnumInfo());
    Write('", "Channels": [');
	bFirstSecond = true;
    foreach(sChannelId, oFunction.EnumUsedIDs()) {
		if (bFirstSecond == false) {
		  Write(',');
		} else {
		  bFirstSecond = false;
		}
		Write('"' # sChannelId # '"');
    }
    Write(']}');
}
Write('}');
